{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "assets/**/*.js",
    "integration_tests",
    "dist",
    "cypress.config.ts",
    "playwright.config.ts",
    "eslint.config.mjs",
    "*.json"
  ],
  "include": ["**/*.js", "**/*.ts", "**/*.json"]
}
