{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = "Error - " + applicationName %}
{% set mainClasses = "app-container govuk-body" %}

{% block title %}
  <div class="govuk-width-container govuk-body hub-header" id="main-content" data-test="main-content">
    <h1 class="govuk-heading-l" id="title">{{ t('errorPage.error') }}</h1>
  </div>
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <p class="govuk-body" data-test="subheading">
      {{ t('errorPage.problemLoading') }}
    </p>
    {{ govukButton({
      text: t('errorPage.goBackHome'),
      href: "/"
    }) }}

    {% if stack %}
      <p>{{ errorMessage }}
      <pre>{{ stack }}</pre>
    {% endif %}
  </div>
{% endblock %}
