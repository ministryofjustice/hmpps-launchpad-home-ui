{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

<table class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--s govuk-!-margin-bottom-2">Awards</caption>
  
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Type</th>
      <th scope="col" class="govuk-table__header sanction_no_wrap">How long</th>
      <th scope="col" class="govuk-table__header sanction_no_wrap">Effective date</th>
    </tr>
  </thead>

  <tbody class="govuk-table__body">
    {% for punishment in punishments %}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell">{{punishment.privilegeType}}</td>
        <td class="govuk-table__cell sanction_no_wrap">{{punishment.schedule.days}} days</td>
        <td class="govuk-table__cell sanction_no_wrap">{{punishment.effectiveDate}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>