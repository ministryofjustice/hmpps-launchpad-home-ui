{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "./punishments/macro.njk" import adjudicationHearingOffencePunishments %}

<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

<h3 class="govuk-heading-m">{{ hearing.offenceDetails.offenceRule.paragraphDescription }}</h3>

{{ govukSummaryList({
  classes: 'govuk-summary-list--no-border',
  rows: [
    { key: { text: t('adjudications.charges.paragraph') }, value: { text: hearing.offenceDetails.offenceRule.paragraphNumber } },
    { key: { text: t('adjudications.charges.type') }, value: { text: "Prison Rule " + hearing.offenceDetails.offenceRule.paragraphNumber.substring(0, 2) } },
    { key: { text: t('adjudications.charges.plea') }, value: { text: hearing.outcome.plea } },
    { key: { text: t('adjudications.charges.status') }, value: { text: hearing.outcome.details } }
  ]
}) }}

{% if hearing.punishments | length %}
  {{ adjudicationHearingOffencePunishments(hearing.punishments, t) }}
{% endif %}
  