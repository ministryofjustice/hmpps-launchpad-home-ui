{% macro transactionsTabs(selectedTab, accountTypes, hasDamageObligations) %}
  <ul class="govuk-tabs__list">
    {% for accountType in accountTypes %}
      <li class="govuk-tabs__list-item {% if accountType == selectedTab %}govuk-tabs__list-item--selected{% endif %}">
        <a class="govuk-tabs__tab" href="/transactions/{{accountType}}">{{ accountType | capitalize }}</a>
      </li>
    {% endfor %}

    {% if (selectedTab === 'damage-obligations') or hasDamageObligations %}
      <li class="govuk-tabs__list-item {% if selectedTab == 'damage-obligations' %}govuk-tabs__list-item--selected{% endif %}">
        <a class="govuk-tabs__tab" href="/transactions/damage-obligations">Damage obligations</a>
      </li>
    {% endif %}
  </ul>
{% endmacro %}