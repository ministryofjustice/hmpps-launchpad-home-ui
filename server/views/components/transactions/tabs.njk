{% macro transactionsTabs(selectedTab, accountTypes, hasDamageObligations, t) %}
  <ul class="govuk-tabs__list">
    {% for accountType in accountTypes %}
      <li class="govuk-tabs__list-item {% if accountType.url == selectedTab %}govuk-tabs__list-item--selected{% endif %}">
        <a class="govuk-tabs__tab" href="/transactions/{{accountType.url}}">{{ t(accountType.label) }}</a>
      </li>
    {% endfor %}

    {% if (selectedTab === 'damage-obligations') or hasDamageObligations %}
      <li class="govuk-tabs__list-item {% if selectedTab == 'damage-obligations' %}govuk-tabs__list-item--selected{% endif %}">
        <a class="govuk-tabs__tab" href="/transactions/damage-obligations">{{ t('transactions.damageObligations.title') }}</a>
      </li>
    {% endif %}
  </ul>
{% endmacro %}
